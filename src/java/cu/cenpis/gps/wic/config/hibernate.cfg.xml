<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/wic?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping class="cu.cenpis.gps.wic.entity.Usuario"/>
    <mapping class="cu.cenpis.gps.wic.entity.Estudio"/>
    <mapping class="cu.cenpis.gps.wic.entity.Medico"/>
    <mapping class="cu.cenpis.gps.wic.entity.Paciente"/>
    <mapping class="cu.cenpis.gps.wic.entity.Rol"/>
    <mapping class="cu.cenpis.gps.wic.entity.Employee"/>
    <mapping class="cu.cenpis.gps.wic.entity.Diagnostico"/>
    <mapping class="cu.cenpis.gps.wic.entity.Especialidad"/>
    <mapping class="cu.cenpis.gps.wic.entity.TipoEstudio"/>
    <mapping class="cu.cenpis.gps.wic.entity.Procedencia"/>
  </session-factory>
</hibernate-configuration>
